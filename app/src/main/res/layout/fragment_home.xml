<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/home_fragment"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/lbl_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coffee_plant_disease_diagnosis"
            android:layout_marginTop="48dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_home_banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:layout_marginStart="-2dp"
            android:src="@drawable/home_page_banner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_home_title"
            android:layout_marginTop="48dp"
            android:contentDescription="@string/img_home_banner" />

        <ImageView
            android:id="@+id/img_scan"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/rounded_image_view"
            android:clickable="true"
            android:contentDescription="@string/img_scan_icon"
            android:focusable="true"
            android:src="@drawable/camera_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_home_banner" />

        <ImageView
            android:id="@+id/img_map"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="24dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/rounded_image_view"
            android:src="@drawable/google_map"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_home_banner"
            android:contentDescription="@string/img_google_map_icon" />

        <TextView
            android:id="@+id/lbl_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/img_scan"
            app:layout_constraintEnd_toEndOf="@id/img_scan"
            app:layout_constraintStart_toStartOf="@id/img_scan"
            android:gravity="center_horizontal|bottom" />

        <TextView
            android:id="@+id/lbl_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/img_map"
            app:layout_constraintEnd_toEndOf="@id/img_map"
            app:layout_constraintStart_toStartOf="@id/img_map"
            android:gravity="center_horizontal|bottom" />

        <ImageView
            android:id="@+id/img_blog"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/icons8_blog"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/rounded_image_view"
            android:contentDescription="@string/img_blog_icon"
            app:layout_constraintEnd_toStartOf="@+id/lbl_map"
            app:layout_constraintStart_toEndOf="@+id/lbl_scan"
            app:layout_constraintTop_toBottomOf="@+id/img_scan" />

        <TextView
            android:id="@+id/lbl_blog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blogs"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/img_blog"
            app:layout_constraintEnd_toEndOf="@id/img_blog"
            app:layout_constraintStart_toStartOf="@id/img_blog"
            android:gravity="center_horizontal|bottom" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>